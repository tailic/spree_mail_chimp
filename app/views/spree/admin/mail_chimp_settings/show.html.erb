<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:mailchimp_settings) %>
<% end %>

<table class="index">
  <tbody>
    <% %i(mailchimp_api_key mailchimp_list_id mailchimp_double_opt_in
          mailchimp_send_welcome mailchimp_send_notify mailchimp_merge_vars).each do |pref| %>
      <tr>
        <td><strong><%= Spree.t(pref) %>:</strong></th>
        <td><%= Spree::Config[pref].to_s %></td>
      </tr>
    <% end %>
  <tbody>
</table>

<div class="form-buttons filter-actions actions" data-hook="buttons">
  <%= link_to button(Spree.t(:edit), 'icon-edit'), edit_admin_mail_chimp_settings_path %>
</div>